%syntax: \newtheoremenv{<envname>}{<envtitle>}{<style>}
\newcommand{\newtheoremenv}[3]{
\newtcbtheorem{tcb#1}{#2}{#3}{}
\newenvironment{#1}[1][]{
\ifx&##1&%
\begin{tcb#1}{}{}
\else
  \begin{tcb#1}{##1}{}
\fi
}{
\end{tcb#1}
}
}

